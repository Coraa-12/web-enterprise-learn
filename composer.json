{
  "name": "your-vendor/php-boilerplate",
  "description": "A clean, modern PHP boilerplate with Docker.",
  "type": "project",
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.88",
    "pestphp/pest": "^2.34",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
